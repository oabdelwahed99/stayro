# Django Settings
# ===============
# SECURITY WARNING: Change these values in production!
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# =====================
# For local development with Docker Compose, use:
# DB_HOST=db
# For local development without Docker, use:
# DB_HOST=localhost
DB_NAME=property_rental
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# JWT Authentication
# ===================
# Optional: Use a separate key for JWT signing
# If not set, SECRET_KEY will be used
JWT_SECRET_KEY=your-jwt-secret-key-optional

# MinIO / S3 Storage Configuration
# ==================================
# Set USE_S3=False to use local file storage instead
USE_S3=True

# MinIO (for local development)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_STORAGE_BUCKET_NAME=property-rental-media
AWS_S3_ENDPOINT_URL=http://localhost:9000
AWS_S3_REGION_NAME=us-east-1
AWS_S3_USE_SSL=False
AWS_S3_VERIFY=False

# For production AWS S3, use:
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_ENDPOINT_URL=https://s3.amazonaws.com
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_USE_SSL=True
# AWS_S3_VERIFY=True
# AWS_S3_CUSTOM_DOMAIN=your-cdn-domain.com  # Optional: for CDN

# Email Configuration (Optional)
# ==============================
# Brevo (formerly Sendinblue) SMTP settings
# Leave empty to use console backend for development
BREVO_SMTP_USER=
BREVO_SMTP_PASSWORD=
EMAIL_SSL_VERIFY=True
DEFAULT_FROM_EMAIL=noreply@example.com

# Alternative Email Backend
# ==========================
# For development, you can use console backend:
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# 
# For production with Brevo:
# EMAIL_BACKEND=core.email_backend.BrevoEmailBackend
# EMAIL_HOST=smtp-relay.brevo.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# Production Settings
# ===================
# When deploying to production, make sure to:
# 1. Set DEBUG=False
# 2. Set a strong SECRET_KEY
# 3. Update ALLOWED_HOSTS with your domain
# 4. Use a production database (not local PostgreSQL)
# 5. Use AWS S3 or similar for file storage
# 6. Configure proper email backend
# 7. Set up proper CORS origins
# 8. Use HTTPS

OPENAI_API_KEY=openAPI_KEY
